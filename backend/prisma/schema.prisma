generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserCredentials {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("volunteer")
  createdAt DateTime @default(now())
}
