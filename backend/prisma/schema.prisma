generator client {
  provider = "prisma-client"
  output   = "../node_modules/@prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model VolunteerHistory {
  id               String   @id @default(uuid())
  userId           String
  eventId          String
  status           String
  hours            Int      @default(0)
  dateParticipated DateTime @default(now())
  createdAt        DateTime @default(now())
}

model State {
  code String @id
  name String
}
